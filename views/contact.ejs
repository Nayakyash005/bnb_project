<%- include("partials/header.ejs") %>

<!-- Create an feedback page so that users can come an give their feedback -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    h1{
        color: white;
    }
 
    .bg-img{
        position: fixed;
        object-fit: cover;
        z-index: -1;
        top: 0;
        left: 0;
        height: 100vh;
        width: 100vw;
        filter: brightness(0.4);
    }
#contact{
    position: relative;
    
}
#contact::before{
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 2;
    opacity: 0.7;
    background: url("../img/bg2.jpg")no-repeat center center/cover;
    
}
#contact-box{
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 100px;
}
#contact-box form{
    width:40%;
    z-index: 2;
    
}
#contact-box label{
    font-size: 1.5rem;
    color: white;
    
}

#contact-box input,#contact-box textarea{
    width: 100%;
    padding: 0.5rem;
    border-radius: 5px ;
    font-size: 1.2rem;
    background-color: #f8f3f3;
}

.btn{
    padding: 5px 20px;
    border: 2px solid white;
    background-color:#f9f5f5;
    font-size: 20px;
    border-radius: 20px;
    margin: 30px;
    cursor: pointer;
}
.btn:hover{
    text-decoration: underline;

}
.color{ 
    color: white;
}
</style>
<body style="overflow-x: hidden;">
    <img class="bg-img" src="images/3.jpg" alt="">
    <section id="contact">
        <h1 class="hprimary center"><%= title%></h1>
        <div id="contact-box">
            <form action="/submit" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                   
                    <input type="text" name="name" id="name" placeholder="Enter your Name">
                </div>
                <div class="form-group">
                    <label for="name">Email:</label>
                    
                    <input type="email" name="email" id="email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="name">phone number:</label>
                    
                    <input type="text" name="contact" id="phone" placeholder="Enter your cell number">
                </div>
                <div class="form-group">
                    <label for="name">location:</label>
                   
                    <input type="text" name="location" id="location" placeholder="Enter your Name">
                </div>
                <div class="form-group">
                    <label for="name"> feedback</label>
              
                    <textarea name="message" id="message" placeholder="feedback dedo please" cols="30" rows="10"></textarea>
                </div>
                <button class="btn"> Submit </button>
            </form>
        </div>
        
    </section>  
</body>
</html>
<%- include("partials/footer.ejs") %>